{
  "manifest_version": 2,

  "name": "Managebac Grade Calculator & More+",
  "short_name": "MB IB DP Grade",
  "version": "1.1.9",
  "description": "Grade Calculator extension and many more features for managebac.com IB DP platform",
  "author": "Bertram Skarupa",
  "default_locale": "en",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "permissions": [
    "*://*.managebac.com/student/*", "*://*.managebac.com/student", "*://*.managebac.cn/*", "tabs", "storage"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "icons": { "16": "./resources/icon16.png",
           "48": "./resources/icon48.png",
          "128": "./resources/icon128.png" }
}
